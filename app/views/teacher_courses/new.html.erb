<% provide(:title, "Add Teacher to " + @course.code) %>
<h1>Add Teacher to <%= link_to @course.code, @course %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@teachercourse) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :teacher %>
        <%= f.select :teacher_id, @teachers, include_blank: false, class: 'form-control' %>
        <%= f.label :date_taught %>
        <%= f.date_field :date_taught, class: 'form-control' %>
        <%= f.label :course %>
        <%= f.select :course_id, [[@course.code, @course.id]], {}, class: 'disabled-input' %>
        <%= f.submit "Add Teacher", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>