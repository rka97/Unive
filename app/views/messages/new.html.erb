<% provide(:title, "Message") %>
<h1>Send Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control' %>
        <%= f.label :receiver, 'Receiver' %>
        <%= f.select :receiver_id, {@receiver.name => @receiver.id}, class: 'form-control disabled-input' %>
        <%= f.label :sender, 'Sender' %>
        <%= f.select :sender_id, {@sender.name => @sender.id}, class: 'form-control disabled-input' %>
        <%= f.submit "Send Message", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>