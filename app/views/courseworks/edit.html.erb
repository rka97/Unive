<% provide(:title, "Edit " + @coursework.title + " - " + @course.code) %>

<div class="row">
  <h4 class="center">Edit <%= @coursework.title %> - <%= link_to @coursework.course.code, @coursework.course %> data</h4>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@coursework) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :date_due %>
        <%= f.date_field :date_due, class: 'form-control' %>
        <%= f.label :date_assigned %>
        <%= f.date_field :date_assigned, class: 'form-control' %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.label :weight %>
        <%= f.number_field :weight, class: 'form-control', step: 0.001 %>
        <%= f.label :total_mark %>
        <%= f.number_field :total_mark, class: 'form-control' %>
        <%= f.label :course %>
        <%= f.select :course_id, [[@course.code, @course.id]], {}, class: 'disabled-input' %>
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>