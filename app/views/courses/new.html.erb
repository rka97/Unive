<% provide(:title, "Create Course") %>
<h1>New Course</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.label :code  %>
        <%= f.text_field :code, class: 'form-control' %>
        <%= f.label :credit_hours %>
        <%= f.number_field :credit_hours, class: 'form-control' %>
        <%= f.label :total_mark  %>
        <%= f.number_field :total_mark, class: 'form-control' %>
        <%= f.select :department_id, Department.all.collect { |d| [ d.name, d.id ] }, include_blank: false %>
        <%= f.submit "Create Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>