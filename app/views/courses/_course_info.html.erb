<tr>
    <td>Id</td>
    <td><%= course.id %></td>
</tr>
<tr>
    <td>Code</td>
    <td><%= course.code %></td>
</tr>
<tr>
    <td>Title</td>
    <td><%= course.title %></td>
</tr>
<tr>
    <td>Credit Hours </td>
    <td><%= course.credit_hours %></td>
</tr>
<tr>
    <td>Total Mark </td>
    <td><%= course.total_mark %></td>
</tr>
<tr>
    <td>Department</td>
    <td><%= link_to course.department.name, course.department %></td>
</tr>
<tr>
    <td>Record Creation Date</td>
    <td><%= course.created_at.to_date %></td>
</tr>
<tr>
    <td>Record Update Date</td>
    <td><%= course.updated_at.to_date %></td>
</tr>
<% if current_user.admin? %>
<tr>
    <td>Edit</td>
    <td><%= link_to "Edit", edit_course_path(course) %></td>
</tr>
<tr>
    <td>Delete</td>
    <td><%= link_to "Delete", course_path(id: course.id), :method => :delete, :data => {confirm: "Are you sure?"} %></td>
</tr>
<% end %>